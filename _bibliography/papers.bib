@article{abrahaFactorsAssociatedAnitmicrobial2017,
	title = {Factors associated with anitmicrobial resistant gonorrheoea infections in men who have sex with men in {Switzerland}: case control study},
	copyright = {info:eu-repo/semantics/openAccess},
	shorttitle = {Factors associated with anitmicrobial resistant gonorrheoea infections in men who have sex with men in {Switzerland}},
